<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_other_meaning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:dragEdge="right"
    app:mode="same_level">

    <RelativeLayout
        android:id="@+id/back_frame_other_meaning"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/switch_icon_delete_Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_delete_big"
            app:si_disabled_alpha=".5"
            app:si_disabled_color="#dadada"
            app:si_enabled="false"
            app:si_tint_color="@color/colorAccent" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/front_frame_other_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_other_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textSize="24sp"
            tools:text="apapkekeapapkekeapapkekeapapkekeapapkekeapapkekeapapkeke" />
    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>